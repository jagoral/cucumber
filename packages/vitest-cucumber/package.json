{
	"name": "@jagoral/vitest-cucumber",
	"version": "0.0.1",
	"description": "A Cucumber-ish plugin for vitest",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
